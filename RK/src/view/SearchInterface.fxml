<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="motherPane" prefHeight="737.0" prefWidth="529.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.SearchInterfaceController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="21.0" prefWidth="300.0" spacing="3.0">
               <children>
                  <Button fx:id="backward" mnemonicParsing="false" text="&lt;" />
                  <Button fx:id="forward" mnemonicParsing="false" text="&gt;" />
               </children>
               <VBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </VBox.margin>
            </HBox>
            <ListView fx:id="repList" prefHeight="685.0" prefWidth="529.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
               <effect>
                  <Glow />
               </effect>
            </ListView>
            <HBox alignment="CENTER" spacing="3.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="open" alignment="CENTER" mnemonicParsing="false" text="Check Out Recipe" />
                  <Button fx:id="delRep" mnemonicParsing="false" text="Delete" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
